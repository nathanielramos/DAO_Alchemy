{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "src",
    "rootDirs": ["src", "stories"],
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*",
    "./typings/*"
  ],
  "exclude": ["node_modules", "build", "scripts"]
}
